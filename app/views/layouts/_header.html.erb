<div class="container">
<nav class="navbar navbar-default gtcr_nav_bar" role="navigation">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to root_path, class: "navbar-brand" do %>
        <i class="glyphicon glyphicon-barcode"></i>&nbsp; Gitcare
      <% end %>
    </div>

    <div class="collapse navbar-collapse navbar-ex1-collapse">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li>
            <%=link_to(image_tag(current_user.avatar.url(:thumb), class: "nav_prof_pic") + current_user.username, current_user) %>
          </li>
          <li>
            <%= link_to dashboard_path, class: "gtcr_tooltip mn_tl", :title => "Dashboard", 'data-placement' => 'bottom'  do %>
              <i class="fa fa-rocket"></i>
            <% end %>
          </li>
          <li>
            <%= link_to edit_user_registration_path, class: "gtcr_tooltip mn_tl", :title => "Settings", 'data-placement' => 'bottom' do %>
              <i class="fa fa-cogs"></i>
            <% end %>
          </li>
          <% if can? :create, @status %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-bullhorn" style="color: #a82b39"></i>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to statuses_path do %>
                    <i class="fa fa-bars"></i> Statuses
                  <% end %>
                </li>
                <li>
                  <%= link_to new_status_path do %>
                    <i class="fa fa-plus"></i> Create Status
                  <% end %>
                </li>
              </ul>
            </li>
          <% end %>
          <li>
            <%= link_to destroy_user_session_path, class: "gtcr_tooltip mn_tl", :title => "Logout", 'data-placement' => 'bottom', method: :delete do %>
              <i class="fa fa-sign-out"></i>
            <% end %>
          </li>
        <% else %>
          <li><%= link_to "Sign in", new_user_session_path %></li>
        <% end %>
      </ul>
    </div>

</nav>
</div>
