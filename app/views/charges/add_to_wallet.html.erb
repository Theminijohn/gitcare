<%= form_tag add_amount_to_wallet_path do %>
  <div class="col-xs-4">
  <%= text_field_tag :amount, '', placeholder: 'amount', class: 'form-control' %>
  </div>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Add to wallet" data-email="<%= current_user.email %>"></script>
<% end %>
