<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title">
      <h1>Edit your Profile</h1>
    </div>
  </div>
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, multipart: true }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :avatar %>
        <%= f.file_field :avatar, class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :cover %>
        <%= f.file_field :cover, class: "form-control"%>
      </div>

      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, class: "form-control" %>
      </div>

      <% if @user.is_company? %>
        <div class="form-group">
          <%= f.label :company, "Company / Organization" %>
          <%= f.text_field :company, class: "form-control" %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.check_box :patron_modus %>&nbsp;&nbsp; <span>Become Total Patron?</span>
      </div>

      <div class="form-group">
        <%= f.check_box :hide_donations %>&nbsp;&nbsp; <span>Hide my Total Givings</span>
      </div>

      <div class="form-group">
        <%= f.label :website, "Your Website" %>
        <%= f.text_field :website, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :city %>
        <%= f.text_field :city, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :slogan %>
        <%= f.text_area :slogan, class: "form-control", :placeholder => "Maximum 200 Characters" %>
      </div>

      <div class="form-group">
        <%= f.label :gcv, 'Gitcare Curriculum Vitae' %>
        <%= f.text_area :gcv, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
        <%= f.password_field :password, class: "form-control", :autocomplete => "off" %>
      </div>

      <div class="form-group">
        <%= f.submit "Update", class: "btn btn-custom" %>
      </div>
    <% end %>
  </div>
  <div class="panel-footer">
    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: "btn btn-custom" %></p>

    <%= link_to "Back", :back %>
  </div>
</div>