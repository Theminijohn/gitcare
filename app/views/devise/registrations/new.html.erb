<div class="row new_user_registration">
  <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3 user_registration_form">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <h2>Sign up <small></small></h2>
      <%= devise_error_messages! %>
      <hr class="colorgraph">
      <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.text_field :first_name, class: "form-control", :placeholder => "First Name", :autofocus => true, :tabindex => "1" %>
          </div>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.text_field :last_name, class: "form-control", :placeholder => "Last Name", :tabindex => "2" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= f.text_field :username, class: "form-control", :placeholder => "User Name", :tabindex => "3" %>
      </div>
      <div class="form-group">
        <%= f.label :is_company do %>
          <%= f.check_box :is_company, :id => "button_cmp" %>&nbsp;&nbsp; <span id="label_cmp">Are you representing a Company / Organization ?</span>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.email_field :email, class: "form-control", :placeholder => "Email Address", :tabindex => "4" %>
      </div>
      <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12">
          <div class="form-group">
            <%= f.password_field :password, class: "form-control", :placeholder => "Password", :tabindex => "5" %>
          </div>
        </div>
      </div>

      <!--<div class="row">-->
        <!--<div class="col-xs-12 col-sm-12 col-md-12">-->
          <!--By clicking <strong class="label label-primary">Sign in</strong>, you agree to the <a href="#" data-toggle="modal" data-target="#t_and_c_m">Terms and Conditions</a> set out by this site, including our Cookie Use.-->
        <!--</div>-->
      <!--</div>-->

      <hr class="colorgraph">
      <div class="row">
        <div class="col-xs-12 col-md-12">
          <%= f.submit "Sign up", class: "btn btn-custom btn-block btn-lg", :tabindex => "7" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
