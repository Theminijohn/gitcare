<div class="form_backg">
  <div class="main-form">
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, class: "form-control", :autofocus => "true", :placeholder => "Email", :tabindex => "1" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: "form-control", :placeholder => "Password", :tabindex => "2" %>
      </div>

      <div class="form-group">
        <div class="checkbox">
          <%= f.check_box :remember_me, :tabindex => "3" %>
          <%= f.label :remember_me %>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit "Sign in", class: "btn btn-custom btn-block", :tabindex => "4" %>
      </div>
      <div class="shared_links">
        <%= link_to "Having troubles ?", new_user_password_path, class: "pull-left", :tabindex => "5" %>
        <%= link_to "Don't have an account?", new_user_registration_path, class: "pull-right", :tabindex => "6" %>
      </div>
    <% end %>
  </div>
</div>

