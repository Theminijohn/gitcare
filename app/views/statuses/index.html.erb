<div class="container">
  <div class="status-timeline">
    <h1 id="timeline">gitcare status</h1>
  </div>
  <ul class="timeline">

    <% @statuses.each do |status| %>
      <li class="<%= cycle("", "timeline-inverted") %>">
        <div class="timeline-badge">
          <i class="fa fa-cloud"></i>
        </div>
        <div class="timeline-panel">
          <div class="timeline-heading">
            <h4 class="timeline-title">
              <%= status.title %>

              <% if can? :delete, @status %>
                <%= link_to status, :data => { :confirm => 'Are you sure you want to delete this Status' }, method: :delete do %>
                  <i class="fa fa-times pull-right"></i>
                <% end %>
              <% end %>

              <% if can? :update, @status %>
                <%= link_to edit_status_path(status) do %>
                  <i class="fa fa-cog pull-right"></i>
                <% end %>
              <% end %>

            </h4>
            <p>
              <small class="text-muted">
                <i class="fa fa-bullhorn"></i>
                <%= time_ago_in_words status.created_at %> ago
              </small>
            </p>
          </div>
          <div class="timeline-body">
            <p>
              <%= status.body %>
            </p>
          </div>
        </div>
      </li>
    <% end %>

  </ul>
</div>
